<h1>Sign up</h1>
<%= form_for :user, url: signup_path do |f| %>


  <p>
Name<br>
<%= f.text_field(:name, {:class => 'form-control'}) %>

  </p>
  <p>
email<br>
<%= f.text_area(:email, {:class => 'form-control'}) %>

  </p>
  <p>
password<br>
<%= f.text_field(:password, {:class => 'form-control'}) %>

  </p>

<p>
  <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
  <% end %>
